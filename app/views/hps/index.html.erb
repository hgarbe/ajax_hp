<h2 class="center">Harry Potter</h2>
<hr />
<div class="row">
  <div class="col s12 m6">
    <button class="btn" id="toggle">Show Form</button>
    <ul id="games-list">
      <% @hps.each do |hp| %>
        <li 
          class="hp-item" 
          data-id=<%= hp.id %>
          data-name="<%= hp.book %>"
        >
          <%= hp.book %> - <%= hp.house %>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="col s12 m6" id="character-list">
    <h3 id="hp">Characters In Harry Potter </h3>
    <ul id="characters">
    </ul>
  </div>
</div>